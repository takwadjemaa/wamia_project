<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_report_seller_payment" model="ir.actions.report">
            <field name="name">seller payment report</field>
            <field name="model">seller.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">odoo_marketplace_custom.report_seller_payment</field>
            <field name="report_file">odoo_marketplace_custom.report_seller_payment</field>
            <field name="binding_model_id" ref="model_seller_payment"/>
            <field name="binding_type">report</field>
        </record>
        <template id="report_seller_payment">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <t t-set="address">
                            <address t-field="o.seller_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker":
                                True}'/>
                            <div t-if="o.seller_id.vat" class="mt16">
                                <t t-if="o.company_id.account_fiscal_country_id.vat_label"
                                   t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                                <t t-else="">Tax ID</t>:
                                <span t-field="o.seller_id.vat"/>
                            </div>
                        </t>
                        <div class="page">
                            <h2>
                                <span t-if="o.payment_mode == 'order_paid'">Order Paid :</span>
                                <span t-if="o.payment_mode == 'seller_payment'">Seller Payment :</span>

                                <span t-if="o.name != '/'" t-field="o.name"/>
                            </h2>
                            <div id="informations" class="row mt-4 mb-4">
                                <div class="col-auto col-3 mw-100 mb-2" t-if="o.date" name="invoice_date">
                                    <strong>Date de paiement</strong>
                                    <p class="m-0" t-field="o.date"/>
                                </div>
                                <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_id" name="origin">
                                    <strong>Origine:</strong>
                                    <p class="m-0" t-field="o.invoice_id"/>
                                </div>

                            </div>

                            <t t-set="lines"
                               t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <table class="table table-sm o_main_table" name="invoice_line_table">
                                <thead>
                                    <tr>
                                        <th name="th_description" class="text-left">
                                            <span>Article</span>
                                        </th>
                                        <th name="th_quantity" class="text-left" t-if="o.payment_mode == 'order_paid'">
                                            <span>Quantité</span>
                                        </th>

                                        <th name="th_priceunit" t-if="o.payment_mode == 'order_paid'"
                                            t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>prix unitaire</span>
                                        </th>

                                        <th name="th_price_unit" t-if="display_discount"
                                            t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Remise(%)</span>
                                        </th>

                                        <th name="th_taxes" t-if="o.payment_mode == 'order_paid'"
                                            t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Taxes</span>
                                        </th>



                                        <th name="th_sous_total" t-if="o.payment_mode == 'order_paid'"
                                            t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Sous-total</span>
                                        </th>


                                        <th name="th_total"
                                            t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Total</span>
                                        </th>

                                        <th name="th_comm" t-if="o.payment_mode == 'order_paid'"
                                            t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Marketplace commission</span>
                                        </th>

                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="lines"
                                       t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                    <t t-foreach="lines" t-as="line">
<!--                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"-->
<!--                                           groups="account.group_show_line_subtotals_tax_excluded"/>-->
<!--                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"-->
<!--                                           groups="account.group_show_line_subtotals_tax_included"/>-->

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                                <td name="account_invoice_line_name">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                                <td class="text-left" t-if="o.payment_mode == 'order_paid'">
                                                    <span t-field="line.quantity"/>
<!--                                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>-->
                                                </td>

                                                <td t-if="o.payment_mode == 'order_paid'" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span class="text-nowrap" t-field="line.price_unit"/>
                                                </td>

                                                <td  t-if="display_discount"
                                                    t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span class="text-nowrap" t-field="line.discount"/>
                                                </td>

                                                <td t-if="o.payment_mode == 'order_paid'"
                                                    t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"
                                                          id="line_tax_ids"/>
                                                </td>

                                                 <td t-if="o.payment_mode == 'order_paid'"
                                                    t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span class="text-nowrap" t-field="line.price_subtotal"/>
                                                </td>

                                                 <td
                                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span class="text-nowrap" t-field="line.price_total"/>
                                                </td>

                                                <td t-if="o.payment_mode == 'order_paid'"
                                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span class="text-nowrap" t-field="line.seller_commission"/>
                                                </td>

                                            </t>

                                        </tr>


                                    </t>
                                </tbody>

                            </table>
                            <div class="clearfix" t-if="o.payment_mode == 'order_paid'">
                                <div id="total" class="row">
                                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                        <table class="table table-sm" style="page-break-inside: avoid;">


                                            <tr class="o_subtotal">
                                                <td>
                                                    <strong>Montant Total </strong>
                                                </td>

                                                <td class="text-right">
                                                    <span
                                                            t-att-class="oe_subtotal_footer_separator"
                                                            t-esc="o.amount_total"
                                                             t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    />
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td>
                                                     <strong>Marketplace Commission </strong>
                                                </td>

                                                <td class="text-right">
                                                    <span
                                                            t-att-class="oe_subtotal_footer_separator"
                                                            t-esc="o.applied_commission"
                                                             t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    />
                                                </td>
                                            </tr>

                                            <!--Payments-->
                                            <tr class=" o_subtotal">
                                                <td>
                                                    <strong>Montant à payer</strong>
                                                </td>

                                                <td class="text-right">
                                                    <span
                                                            t-att-class="oe_subtotal_footer_separator"
                                                            t-esc="o.payable_amount"
                                                             t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    />
                                                </td>
                                            </tr>

                                        </table>
                                    </div>
                                </div>
                            </div>
                             <div class="clearfix" t-if="o.payment_mode == 'seller_payment'">
                                <div id="total" class="row">
                                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                        <table class="table table-sm" style="page-break-inside: avoid;">


                                            <tr class="o_subtotal">
                                                <td>
                                                    <strong>Montant Total </strong>
                                                </td>

                                                <td class="text-right">
                                                    <span
                                                            t-att-class="oe_subtotal_footer_separator"
                                                            t-esc="o.cashable_amountt"
                                                             t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    />
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td>
                                                     <strong>Montant payer</strong>
                                                </td>

                                                <td class="text-right">
                                                    <span
                                                            t-att-class="oe_subtotal_footer_separator"
                                                            t-esc="o.payable_amount"
                                                             t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    />
                                                </td>
                                            </tr>

                                            <!--Payments-->
                                            <tr class=" o_subtotal">
                                                <td>
                                                    <strong> Montant restant</strong>
                                                </td>

                                                <td class="text-right">
                                                    <span
                                                            t-att-class="oe_subtotal_footer_separator"
                                                            t-esc="o.rest_amount"
                                                             t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    />
                                                </td>
                                            </tr>

                                        </table>
                                    </div>
                                </div>
                            </div>


                        </div>


                    </t>

                </t>


            </t>

        </template>


    </data>
</odoo>
