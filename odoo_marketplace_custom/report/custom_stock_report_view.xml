<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_delivery_document_customized" inherit_id="stock.report_delivery_document" primary="True">
        <xpath expr="//div[@name='div_incoming_address']" position="replace"/>


        <xpath expr="//div[@name='div_outgoing_address']" position="replace"/>


        <xpath expr="//div[@class='page']" position="replace">
            <table style=" width:100%;border-collapse: separate;border: 1px solid #000;border-spacing: 5px;">
                <tr>
                    <th style="  border: 1px solid #000;  padding: 5px;">
                        <div t-if="o.move_ids_without_package and o.move_ids_without_package[0].partner_id">
                            <span><strong>Delivery Address:</strong></span>
                            <div t-field="o.move_ids_without_package[0].partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        </div>
                    </th>
                    <th style="  border: 1px solid #000;  padding: 5px;">
                        <span><strong>Phone</strong></span>
                        <div t-field="o.move_ids_without_package[0].partner_id"  t-options='{"widget": "contact", "fields": ["phone"], "phone_icons": True}'/>
                    </th>


                </tr>
                    <tr>
                        <td style="  border: 1px solid #000;  padding: 5px;">
                            <b>Reference:</b>
                            <span t-field="o.name"/>
                        </td>
                        <td style="  border: 1px solid #000;  padding: 5px;">
                            hhhh
                        </td>

                    </tr>
                </table>
        </xpath>
    </template>

    <template id="report_deliveryslip_custom">
        <t t-foreach="docs" t-as="o">
            <t t-call="odoo_marketplace_custom.report_delivery_document_customized" t-lang="o.partner_id.lang"/>
        </t>
    </template>


</odoo>