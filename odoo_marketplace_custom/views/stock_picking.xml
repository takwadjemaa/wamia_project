        <record id="add_state_in_stock_picking_form_formview" model="ir.ui.view">
                <field name="name">stock.picking.form</field>
                <field name="model">stock.picking</field>
                <field name="inherit_id" ref="odoo_marketplace.add_seller_in_stock_picking_form_formview"/>
                <field name="arch" type="xml">
                    <field name="marketplace_seller_id" position="after">
                        <field name="state_id"  />
                    </field>
                </field>
        </record>

        <record id="vpicktree_inherit_stock_picking_tree" model="ir.ui.view">
            <field name="name">stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="state_id" optional="show"/>
                </xpath>
            </field>
        </record>

        <!--Filter Stock Picking-->

        <record id="view_stock_picking_custom" model="ir.ui.view">
            <field name="name">Stock Picking Add Address Group By For MP Manager</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <group position="inside">
                    <filter string="Custom Address" name="group_by_state"  context="{'group_by':'state_id'}"/>
                </group>
            </field>
        </record>

    <!-- Sale Order Tree-->
      <record id="sale_order_view_order_tree" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="marketplace_seller_id" optional="show"/>
                </xpath>
            </field>
      </record>

