<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="website_config_settings_view_form" model="ir.ui.view">
        <field name="name">loyalty.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
					<xpath expr="//field[@name='has_social_network']/../.." position="after">


							<div class="col-xs-12 col-md-6 o_setting_box">
										<h2>Loyalty</h2>
										<div class="o_setting_left_pane">
										</div>
										<div class="o_setting_right_pane">
												<label string="Default Loyality Program" for="wk_loyalty_program_id"/>

												<div class="row mt16" title="Default Loyality Program set on website.l.">
		                        <label for="wk_loyalty_program_id" class="col-md-3 o_light_label" />
		                        <field name="wk_loyalty_program_id" />
		                    </div>
										</div>
						</div>
						</xpath>

        </field>
    </record>
</odoo>
